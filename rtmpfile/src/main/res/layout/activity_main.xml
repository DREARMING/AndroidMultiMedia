<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wangheart.rtmpfile.MainActivity">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <Button
            style="@style/BtnMain"
            android:onClick="btnFFmpegPushFile"
            android:text="推送文件RTMP流（FFmpeg）" />
        <Button
            style="@style/BtnMain"
            android:onClick="btmRtmpdumpFile"
            android:text="推送FLV文件RTMP流(librmtp)" />

        <Button
            style="@style/BtnMain"
            android:onClick="btnCameraFFmpeg"
            android:text="开启摄像头进行视频编码(FFmpeg),输出到文件/RTMP" />

        <Button
            style="@style/BtnMain"
            android:onClick="btnMediaCodec"
            android:text="开启摄像头进行视频编码(MediaCodec)，存到flv文件" />

        <Button
            style="@style/BtnMain"
            android:onClick="btnMediaCodecRtmp"
            android:text="开启摄像头进行视频编码(MediaCodec)，RTMP推流" />

        <Button
            style="@style/BtnMain"
            android:onClick="btnAudioFormatChange"
            android:text="音频格式转换(MediaCodec)" />

        <Button
            style="@style/BtnMain"
            android:onClick="btnAudioRecord"
            android:text="录音AAC编码(MediaCodec)" />

        <Button
            style="@style/BtnMain"
            android:onClick="btnAudioRecordFFmpeg"
            android:text="录音AAC编码（FFmpeg）" />
        <Button
            style="@style/BtnMain"
            android:onClick="btnVideoCompoundFile"
            android:text="音视频合成，存到flv文件" />
        <TextView
            android:id="@+id/tv_codec_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>
